+++ b/chrome/common/safe_browsing/BUILD.gn
@@ -73,11 +73,11 @@ source_set("safe_browsing") {
     ":file_type_policies",
   ]
 
-  if (is_mac) {
-    deps += [ ":disk_image_type_sniffer_mac" ]
-  }
-
   if (safe_browsing_mode == 1) {
+    if (is_mac) {
+      deps += [ ":disk_image_type_sniffer_mac" ]
+    }
